<?xml version="1.0" encoding="UTF-8"?>
<dialog xsi:noNamespaceSchemaLocation="WatsonDialogDocument_1.0.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <flow>
        <folder label="Main">
            <output>
                <prompt selectionType="RANDOM">
                    <item>Hello, I am Watson.  What can I help you today?</item>
                </prompt>
                <goto ref="getUserInput_fromAirport"/>
            </output>
            <getUserInput id="getUserInput_fromAirport">
                <search ref="folder_fromAirport"/>
                <default>
                    <output>
                        <prompt selectionType="RANDOM">
                            <item>I am sorry, I did not understand your question. Please rephrase your question.</item>
                        </prompt>
                    </output>
                </default>
            </getUserInput>
        </folder>
        <folder label="Library">
            <folder label="Live Content" id="folder_fromAirport">
                <input>
                    <grammar>
                        <item>$ reservation</item>
                        <item>$ reservation *</item>
                    </grammar>
                    <output>
                        <prompt selectionType="RANDOM">
                            <item>What is your departure airport?</item>
                        </prompt>
                        <getUserInput>
                            <input>
                                <grammar>
                                    <item>$ (Airports)={Departure}</item>
                                    <item>$ (Airports)={Departure} *</item>
                                </grammar>
                                    <action varName="Departure" operator="SET_TO">{Departure.value:main}</action>
                                <output>
									<prompt selectionType="RANDOM">
                                        <item>What is your arrival airport?</item>
                                    </prompt>
                                    <getUserInput>
                                        <input>
                                            <grammar>
                                                <item>$ (Airports)={Arrival}</item>
                                                <item>$ (Airports)={Arrival} *</item>
                                            </grammar>
                                            <action varName="Arrival" operator="SET_TO">{Arrival.value:main}</action>
                                            <output>
                                                <prompt selectionType="RANDOM">
                                                    <item>Round Trip?</item>
                                                </prompt>
                                                <getUserInput>
                                                    <input>
                                                        <grammar>
                                                            <item>$ Yes</item>
                                                            <item>$ Yes *</item>
                                                        </grammar>
                                                        <action varName="Oneway" operator="SET_TO">false</action>
			            								<goto ref="Summary"/>
                                                    </input>
                                                    <input>
                                                        <grammar>
                                                            <item>$ No</item>
                                                            <item>$ No *</item>
                                                        </grammar>
                                                        <action varName="Oneway" operator="SET_TO">true</action>
			            								<goto ref="Summary"/>
                                                    </input>
                                                </getUserInput>
                                            </output>
                                        </input>
                                    </getUserInput>
								</output>
                            </input>
                        </getUserInput>
                    </output>
                </input>
				<input>
                    <grammar>
                        <item>$ No</item>
                        <item>$ No*</item>
                        <item>$ No *</item>
                    </grammar>
					<output>
					    <prompt selectionType="RANDOM">
                            <item>Thank you for choosing Acmeair!</item>
                        </prompt>
					</output>
				</input>
            </folder>
            <folder label="Storage"/>
        </folder>
		<folder label="Concepts">
            <concept>
                <grammar>
                    <item>reservation</item>
                    <item>reserve</item>
                    <item>book</item>
                    <item>booking</item>
                </grammar>
            </concept>
        </folder>
		<folder label="End">
            <if id="Summary">
                <output>
                    <prompt selectionType="RANDOM">
                        <item>Here is the Itinerary.</item>
                    </prompt>
					<search ref="folder_fromAirport"/>
                </output>
            </if>
        </folder>
        <folder label="Global"/>
        <folder label="Concepts"/>
    </flow>
    <entities>
